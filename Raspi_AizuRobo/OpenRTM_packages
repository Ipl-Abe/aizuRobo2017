sudo su -c 'echo "deb http://openrtm.org/pub/Linux/raspbian/ jessie main" >> /etc/apt/sources.list'
sudo apt-get update && sudo apt-get -y --force-yes install gcc g++ make uuid-dev libomniorb4-dev
sudo apt-get -y --force-yes install omniidl omniorb-nameserver openrtm-aist openrtm-aist-dev openrtm-aist-example openrtm-aist-python
sudo apt-get -y --force-yes install python-omniorb openrtm-aist-python-example cmake subversion git
sudo apt-get -y --force-yes install doxygen libopencv-dev python-opencv
